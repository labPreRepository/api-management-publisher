<microchart:InteractiveDonutChart xmlns:microchart="sap.suite.ui.microchart"
    segments="{chartProviders>/}"
    displayedSegments="5">
    <microchart:segments>
        <microchart:InteractiveDonutChartSegment
            label="{chartProviders>name}"
            value="{chartProviders>count}"
            displayedValue="{chartProviders>percent}" />
    </microchart:segments>
</microchart:InteractiveDonutChart>